<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Mon site - BUT RT{% endblock %}</title>

    <!-- Thème Bootswatch Ubuntu-like (United) -->
    <link rel="stylesheet" href="https://bootswatch.com/5/united/bootstrap.min.css">

    <!-- Style perso : orange Ubuntu -->
    <style>
        .bg-primary,
        .table-primary,
        .btn-primary,
        .alert-primary,
        .text-primary {
            background-color: #ffffff !important; /* blanc */
            color: #000000 !important; /* texte noir */
        }

        .border-primary {
            border-color: #ffffff !important;
        }

        .text-primary {
            color: #000000 !important;
        }

        a {
            color: #E95420; /* orange Ubuntu */
        }

        a:hover {
            color: #c3411a; /* orange foncé */
        }

        body {
            background-color: #f8f9fa; /* fond gris clair */
        }

        .navbar {
            background-color: #E95420 !important; /* orange Ubuntu */
        }

        .navbar-brand, 
        .nav-link {
            color: white !important;
            font-weight: 500;
        }

        .navbar-brand:hover, 
        .nav-link:hover {
            color: #ffe6d5 !important; /* blanc légèrement orangé */
        }

        footer {
            background-color: #2c2c2c;
            color: #ffffff;
            padding: 20px;
            text-align: center;
            margin-top: 40px;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">Mon Site</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_cv') }}">CV</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_loisirs') }}">Loisirs</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_portfolio') }}">Portfolio</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- CONTENU DES PAGES -->
    <div class="container mt-4">
        {% block body %}{% endblock %}
    </div>

    <!-- FOOTER -->
    <footer>
        <p>© 2025 - Abiderrahmane Adam | Projet BUT RT | Contenu protégé</p>
    </footer>

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}

</body>
</html>