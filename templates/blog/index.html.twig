{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container">
    <div class="formulaire-container">
        <form method="POST">
            <fieldset>
                <legend>Formulaire d'inscription (tous les champs sont obligatoires)</legend>
                
                <div class="champs">
                    <label for="nom" class="form-label">Nom</label>
                    <input type="text" name="nom" class="form-control" id="nom" placeholder="Entrez votre Nom..." required>
                </div>
                
                <div class="champs">
                    <label for="prenom" class="form-label">Prénom</label>
                    <input type="text" name="prenom" class="form-control" id="prenom" placeholder="Entrez votre Prénom..." required>
                </div>
                
                <div class="champs">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="XX@gmail.com" required>
                </div>
                
                <div class="champs">
                    <label for="telephone" class="form-label">Téléphone</label>
                    <input type="tel" name="telephone" class="form-control" id="telephone" placeholder="+33 . .. .. .." required>
                </div>

                <div class="telechargement">
                    <button type="submit" name="format" value="pdf" class="btn btn-primary me-2">
                        Télécharger le CV (PDF)
                    </button>
                    <button type="submit" name="format" value="docx" class="btn btn-primary">
                        Télécharger le CV (DOCX)
                    </button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<style>
.formulaire-container {
    max-width: 600px;
    margin: auto;
    background-color: white;
    padding: 30px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
</style>
{% endblock %}