{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <div class="formulaire-container">
    <form>
        <fieldset>
            <legend>Formulaire d'inscription</legend>
            
            <div>
                <label for="nom" class="form-label">Nom</label>
                <input type="text" class="form-control" id="nom" placeholder="Entrez votre Nom...">
            </div>
            
            <div>
                <label for="prenom" class="form-label">Prénom</label>
                <input type="text" class="form-control" id="prenom" placeholder="Entrez votre Prénom...">
            </div>
            
            <div>
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" placeholder="XX@gmail.com">
            </div>
            
            <div>
                <label for="telephone" class="form-label">Téléphone</label>
                <input type="tel" class="form-control" id="telephone" placeholder="+ 33 XX XX XX XX">
            </div>

            <a href="{{ asset('cv/CV_MonNom.pdf') }}" class="btn btn-primary" download>
                Télécharger le CV (PDF)
            </a>
            <a href="{{ asset('cv/CV_MonNom.docx') }}" class="btn btn-primary" download>
                Télécharger le CV (docx)
            </a>
        </fieldset>
    </form>
</div>
<style>
    .example-wrapper { 
        margin: 1em auto; 
        max-width: 800px; 
        width: 95%; 
        font: 18px,1.5 sans-serif; 
    }
    .example-wrapper code { 
        background: #F5F5F5; 
        padding: 2px 6px; 
    }
</style>
{% endblock %}
